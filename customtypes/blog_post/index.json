{
  "id": "blog_post",
  "label": "Blog",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "Id",
          "placeholder": ""
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "",
          "allowTargetBlank": false,
          "single": "paragraph,preformatted,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "published_on": {
        "type": "Date",
        "config": {
          "label": "Published On",
          "placeholder": ""
        }
      },
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "Content",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "category": {
        "type": "Select",
        "config": {
          "label": "Category",
          "placeholder": "",
          "options": [
            "General",
            "Project Update",
            "Press Release",
            "Product Release",
            "Marketing",
            "Engineering"
          ],
          "default_value": "General"
        }
      },
      "linked_item": {
        "type": "Link",
        "config": {
          "label": "Linked Item",
          "select": "document",
          "customtypes": [
            "projects",
            "product"
          ]
        }
      },
      "slug": {
        "type": "Text",
        "config": {
          "label": "Slug",
          "placeholder": ""
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "browse_blog": {
              "type": "SharedSlice"
            }
          }
        }
      }
    }
  }
}